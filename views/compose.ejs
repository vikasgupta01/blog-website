<%- include("partials/header") -%> 

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" class="form-control" placeholder="Enter Post Title">
        <label for="postBody">Post</label>
        <textarea name="postBody" rows="3" cols="30" class="form-control" placeholder="Enter Post Body"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>